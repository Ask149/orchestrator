{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/src"],
  "testMatch": ["**/__tests__/**/*.test.ts"],
  "moduleFileExtensions": ["ts", "js", "json"],
  "transform": {
    "^.+\\.ts$": ["ts-jest", {
      "diagnostics": {
        "ignoreCodes": [151002]
      }
    }]
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/index.ts"
  ]
}
